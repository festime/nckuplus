%h3 新主題
- if @topic.errors.any?
  %ul
    = @topic.errors.full_messages.each do |message|
      %li= message
= form_for @topic do |topic_form|
  .form-group
    = topic_form.label :title, "標題"
    = topic_form.text_field :title, class: "form-control", autofocus: true
  .form-group
    = fields_for @post do |post_form|
      = post_form.label :content, "內文"
      = post_form.cktext_area :content, rows: 10
  .form-group
    = topic_form.submit "發文", class: "btn btn-primary"
